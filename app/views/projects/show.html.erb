<h2><%= @project.name %></h2>
<p><%= @project.description %></p>
<p>Deadline: <%= @project.deadline %></p>

<h3>Tasks</h3>
<% @tasks.each do |task| %>
  <p><%= task.title %> - <%= task.status %></p>
<% end %>

<%= link_to "Edit", edit_project_path(@project) if current_user.admin? || current_user.manager? %>
